{
    "name": "RP2040",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "root",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--privileged",
        "-v", "/dev/bus/usb:/dev/bus/usb",
        "--device=/dev/ttyS3"
    ],

    "mounts":  [
        "source=/dev/ttyS3,target=/dev/ttyS3,type=bind",
    ],

    "customizations": {
        "settings": {
            "terminal.integrated.profiles.linux": {
                "bash": {
                    "path": "/usr/bin/bash"
                }
            }
        },
        "extensions": [
            "ms-vscode.cpptools",
            "marus25.cortex-debug",
            "ms-vscode.cmake-tools",
            "eamodio.gitlens",
            "ms-vscode.cpptools-extension-pack"
        ]
    }
}
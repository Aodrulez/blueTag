{
    "name": "RP2040",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--privileged",
        "-v", "/dev/bus/usb:/dev/bus/usb",
        "--device=/dev/bus/usb",
        "--device=/dev/ttyACM0",
    ],

    "customizations": {
        "settings": {
            "terminal.integrated.profiles.linux": {
                "bash": {
                    "path": "/usr/bin/bash"
                }
            }
        },
        "extensions": [
            "ms-vscode.cpptools",
            "ms-vscode.cmake-tools",
            "eamodio.gitlens",
            "ms-vscode.cpptools-extension-pack"
        ]
    },

    "remoteUser": "vscode"
}